%hr
.card
  .card-header
    %h5
      = _("#{hook_class.underscore.humanize.titleize.pluralize}")
      (#{hooks.count})

  - if hooks.any?
    %ul.content-list
      - hooks.each do |hook|
        = render 'shared/web_hooks/item', hook: hook
  - else
    %p.text-center.prepend-top-10.append-bottom-10
      = _('No webhooks found, add one in the form above.')
